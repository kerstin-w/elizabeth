<div class="py-8">
  {% paginate blog.articles by section.settings.number_of_blog_posts %}

    <h1 class="text-center {{ section.settings.heading_size }}">{{ blog.title }}</h1>

    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for article in blog.articles %}
          <div class="w-full py-6 px-3">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden flex flex-col h-full">
              {% if article.image %}
                <a href="{{ article.url }}">
                  <img
                    class="w-full h-80 object-cover"
                    src="{{ article.image | img_url: 'medium' }}"
                    alt="{{ article.image.alt }}"
                    width="{{ image.width }}"
                    height="{{ image.height }}"
                    loading="eager" />
                </a>
              {% else %}
                <a href="{{ article.url }}">{{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}</a>
              {% endif %}

              <div class="p-4 flex flex-col flex-grow">
                <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>

                {% if section.settings.show_excerpt %}
                  <div class="flex-grow">
                    {% if article.excerpt.size > 0 %}
                      <p>{{ article.excerpt | strip_html | truncatewords: section.settings.excerpt_length }}</p>

                    {% else %}
                      <p>{{ article.content | strip_html | truncatewords: section.settings.excerpt_length }}</p>

                    {% endif %}
                  </div>
                {% endif %}

                <a href="{{ article.url }}" class="font-medium text-blue-600 hover:text-blue-800 my-4 block mt-auto">{{ section.settings.blog_read_more }}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="max-w-6xl mx-auto">
      {%- comment -%}
        Renders the 'pagination' snippet, passing the current pagination object.
        This enables navigation controls for paginated blog content.
        - pagination: The paginate object containing pagination data (e.g., current page, total pages).
      {%- endcomment -%}
      {% render 'pagination'
        , pagination: paginate %}
    </div>
  {% endpaginate %}
</div>


{% schema %}
  {
    "name": "Blog Template Settings",
    "settings": [
      {
        "type": "text",
        "id": "blog_read_more",
        "label": "Blog read more label",
        "default": "Read More"
      }, {
        "type": "range",
        "id": "number_of_blog_posts",
        "step": 1,
        "min": 1,
        "max": 6,
        "label": "Number of blog posts per page",
        "default": 3
      }, {
        "type": "checkbox",
        "id": "show_excerpt",
        "label": "Show article description",
        "default": true
      },
          {
        "type": "range",
        "id": "excerpt_length",
        "min": 10,
        "max": 50,
        "step": 5,
        "label": "Excerpt word count",
        "default": 15
      },
      {
        "type": "text",
        "id": "heading_size",
        "label": "Blog title heading size",
        "default": "text-3xl",
        "info": "Tailwind class (e.g., text-2xl, text-4xl)"
      }
    ]
  }
{% endschema %}