<div class="px-4 py-8">
  {% paginate collection.products by section.settings.number_of_products_per_page %}
    <h1 class="text-3xl text-center">
      {{ collection.title }}
    </h1>

    <div class="max-w-6xl mx-auto">
      {% liquid
        assign mobile_cols = section.settings.products_per_row_mobile
        assign desktop_cols = section.settings.products_per_row_desktop

        case mobile_cols
          when '1'
            assign mobile_class = 'grid-cols-1'
          when '2'
            assign mobile_class = 'grid-cols-2'
        endcase

        case desktop_cols
          when '2'
            assign desktop_class = 'md:grid-cols-2'
          when '3'
            assign desktop_class = 'md:grid-cols-3'
          when '4'
            assign desktop_class = 'md:grid-cols-4'
        endcase
      %}

      <div class="grid {{ mobile_class }} {{ desktop_class }} gap-4">
        {% for product in collection.products %}

          {% render 'product-card'
            , product: product
            , show_vendor: section.settings.show_vendor %}
        {% else %}
          <p>There are no products inside this collection.</p>
        {% endfor %}
      </div>
    </div>


    {% render 'pagination'
      , pagination: paginate %}
  {% endpaginate %}
</div>

{% schema %}
  {
    "name": "Template Collection",
    "settings": [
      {
        "type": "number",
        "id": "number_of_products_per_page",
        "label": "Number of products per page",
        "default": 7
      }, {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show vendor name",
        "default": true
      }, {
        "type": "select",
        "id": "products_per_row_mobile",
        "label": "Products per row (Mobile)",
        "options": [
          {
            "value": "1",
            "label": "1"
          }, {
            "value": "2",
            "label": "2"
          }
        ],
        "default": "1"
      }, {
        "type": "select",
        "id": "products_per_row_desktop",
        "label": "Products per row (Desktop)",
        "options": [
          {
            "value": "2",
            "label": "2"
          }, {
            "value": "3",
            "label": "3"
          }, {
            "value": "4",
            "label": "4"
          }
        ],
        "default": "4"
      }
    ]
  }
{% endschema %}