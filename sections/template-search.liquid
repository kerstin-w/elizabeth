<div class="container mx-auto">
  {% paginate search.results by 10 %}
    <h1 class="text-xl my-4 text-center">{{ search.results_count }} results found for "{{ search.terms }}"</h1>
    <div class="flex justify-center items-center">
      <form
        action="{{ routes.search_url }}"
        method="get"
        class="border flex rounded">
        <input
          type="search"
          name="q"
          value="{{ search.terms |  escape }}"
          placeholder="Search"
          class="px-4 py-2 w-80 border-none">
        <button type="submit" class="bg-gray-900 hover:bg-gray-700 text-white border px-4">Search</button>
      </form>
    </div>
    {% if search.performed %}
      {% if search.results.size > 0 %}
        <div class="max-w-6xl mx-auto">
          <p class="text-gray-500 text-center my-10">{{ search.results.size }} results for the search term {{ search.terms | escape }}</p>
          <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6 my-6">
            {% for item in search.results %}
              {% case item.object_type %}
                {% when "product" %}
                  {% render "product-card"
                    , product_product: item %}
                  {% else %}

              {% endcase %}
            {% endfor %}
          </div>

        </div>

      {% else %}
        <div class="text-center my-4">
          <p>No results found found for the search {{ search.terms | escape }}</p>
        </div>
      {% endif %}
    {% endif %}

    {% render "pagination"
      , pagination: paginate %}
  {% endpaginate %}
</div>