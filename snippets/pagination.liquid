{% if pagination.pages > 0 %}
  <nav role="navigation" class="flex justify-center my-8">
    {%- comment -%}
      Renders pagination navigation links for moving between pages.

      Displays a "previous" link if available, allowing users to navigate to the prior page.
      Displays a "next" link if available, allowing users to navigate to the next page.

      Dependencies:
      - pagination object with optional 'previous' and 'next' properties
      - Each pagination link contains 'url' and 'title' attributes

      Usage:
      {% include 'pagination' %}
    {%- endcomment -%}
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">{{ pagination.previous.title }}</a>
    {% endif %}

    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">{{ part.title }}</a>

      {% else %}
        <span class="border border-gray-600 text-white bg-gray-600 px-8 py-3 mx-1 rounded-sm font-medium">{{ part.title }}</span>
      {% endif %}

    {% endfor %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">{{ pagination.next.title }}</a>
    {% endif %}
  </nav>
{% endif %}